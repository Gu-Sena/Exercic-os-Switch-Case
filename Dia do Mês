#include <stdio.h>

int main()
{
 
    int mes;
    
    printf("digite o mês ");
    scanf("%d", &mes);
    
    switch(mes){
        case 1 :
            printf("O mês tem 31 dias. \n");
            break;
        case 2 :
            printf("O mês tem 28 dias. \n");
            break;
         case 3 :
            printf("O mês tem 31 dias. \n");
            break;   
         case 4 :
            printf("O mês tem 30 dias. \n");
            break; 
         case 5 :
            printf("O mês tem 31 dias. \n");
            break;    
         case 6 :
            printf("O mês tem 30 dias. \n");
            break; 
         case 7 :
            printf("O mês tem 31 dias. \n");
            break;  
         case 8 :
            printf("O mês tem 31 dias. \n");
            break; 
         case 9 :
            printf("O mês tem 30 dias. \n");
            break;  
         case 10 :
            printf("O mês tem 31 dias. \n");
            break;   
         case 11 :
            printf("O mês tem 30 dias. \n");
            break; 
         case 12 :
            printf("O mês tem 31 dias. \n");
            break; 
        default:
            printf("mês invalido. ");
    }
    return 0;
}

